{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modifier le mot de passe</h1>
        <div class="alert alert-light">
            <h2 class="alert-heading">Garder ces informations confidentielles</h2>
            <hr>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary"><i class="fas fa-check mr-2"></i> Modifier le mot de passe</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}