{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="py-5">Administration des utilisateurs</h1>
        <table class="table table-hover table-responsive-sm">
            <thead class="text-center">
                <tr>
                    <th>Id</th>
                    <th>Utilisateur</th>
                    <th>Email</th>
                    <th>Introduction</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="text-center">
                {% for user in pagination.data %} 
                    <tr>
                        <td>{{user.id}}</td>
                        <td>
                            <img src="{{user.picture}}" class="avatar avatar-mini" alt="Avatar de {{user.fullName}}"><br>
                            {{user.fullName}}
                        </td>
                        <td>{{user.email}}</td>
                        <td>{{user.introduction}}</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="{{path('admin_user_edit', {'id': user.id})}}" class="btn btn-primary mr-1"><i class="fas fa-edit"></i></a>
                                <a href="{{path('admin_user_delete', {'id': user.id})}}" onclick="return confirm(`Voulez-vous vraiment supprimer l'utilisateur : {{user.fullName}} ?`)" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}
