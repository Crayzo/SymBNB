{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8 align-self-center">
                                <h4 class="card-title m-0">{{stats.users}} utilisateurs</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-success mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8 align-self-center">
                                <h4 class="card-title m-0">{{stats.ads}} annonces postées</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-warning mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8 align-self-center">
                                <h4 class="card-title m-0">{{stats.bookings}} réservations</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card text-white bg-info mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8 align-self-center">
                                <h4 class="card-title m-0">{{stats.comments}} avis</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success mt-3">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-up mr-2"></i> Les annonces populaires</h2>
                    <table class="table table-hover text-white">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th class="text-center">Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in bestAds %}   
                                <tr>
                                    <td>{{ad.title}}</td>
                                    <td>
                                        <img src="{{ad.picture}}" alt="" class="avatar avatar-mini mr-2"> 
                                        {{ad.firstName}} {{ad.lastName}}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-dark">
                                            {{ad.note|number_format(1, ",", " ")}}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger mt-3">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-down mr-2"></i> Les pires annonces</h2>
                    <table class="table table-hover text-white">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th class="text-center">Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worstAds %}   
                                <tr>
                                    <td>{{ad.title}}</td>
                                    <td>
                                        <img src="{{ad.picture}}" alt="" class="avatar avatar-mini mr-2"> 
                                        {{ad.firstName}} {{ad.lastName}}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-dark">
                                            {{ad.note|number_format(1, ",", " ")}}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
